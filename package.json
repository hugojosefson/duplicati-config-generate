{
  "name": "@hugojosefson/duplicati-generate-config",
  "version": "2.0.5",
  "description": "Generate duplicati backup configs from a flat file",
  "type": "module",
  "main": "src/api.js",
  "files": [
    "bin",
    "src"
  ],
  "bin": {
    "duplicati-generate-config": "bin/duplicati-generate-config"
  },
  "scripts": {
    "start": "bin/duplicati-generate-config",
    "test": "run-s lint mocha",
    "mocha": "NODE_ENV=test nyc mocha --require @babel/register",
    "lint": "standard",
    "lint-fix": "standard --fix",
    "prepare": "run-s documentation",
    "documentation": "documentation readme --section=API --shallow --format=md src/api.js",
    "npm-audit": "npm install --package-lock-only && npm audit; rm package-lock.json",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "nyc": {
    "cache": true,
    "all": true,
    "sourceMap": false,
    "instrument": false
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          "@babel/preset-env"
        ],
        "plugins": [
          [
            "istanbul",
            {
              "exclude": [
                "**/*.spec.js"
              ]
            }
          ]
        ]
      }
    }
  },
  "lint-staged": {
    "*.{mjs,js,jsx}": [
      "standard --fix",
      "git add"
    ]
  },
  "repository": "hugojosefson/duplicati-generate-config",
  "keywords": [
    "duplicati",
    "config",
    "backup"
  ],
  "author": "Hugo Josefson <hugo@josefson.org> (https://www.hugojosefson.com/)",
  "license": "MIT",
  "engines": {
    "node": ">=12.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/register": "^7.9.0",
    "babel-plugin-istanbul": "^6.0.0",
    "chai": "^4.2.0",
    "coveralls": "^3.0.11",
    "documentation": "^13.0.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.1.0",
    "mjs-mocha": "^3.0.0",
    "mocha": "^7.1.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.0",
    "standard": "^14.3.3"
  },
  "dependencies": {
    "ramda": "^0.27.0",
    "term-size": "^2.2.0",
    "yargs": "^15.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
