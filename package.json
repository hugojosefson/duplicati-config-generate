{
  "name": "@hugojosefson/duplicati-generate-config",
  "version": "1.1.4",
  "description": "Generate duplicati backup configs from a flat file",
  "type": "module",
  "main": "src/api.js",
  "files": [
    "bin",
    "src"
  ],
  "bin": {
    "duplicati-generate-config": "bin/duplicati-generate-config"
  },
  "scripts": {
    "start": "bin/duplicati-generate-config",
    "test": "run-s lint mocha",
    "mocha": "mjs-mocha --es-module-specifier-resolution=node",
    "lint": "standard",
    "lint-fix": "standard --fix",
    "prepare": "run-s documentation",
    "documentation": "documentation readme --section=API --shallow --format=md src/api.js",
    "npm-audit": "npm install --package-lock-only && npm audit; rm package-lock.json",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "nyc": {
    "cache": true,
    "all": true
  },
  "lint-staged": {
    "*.{mjs,js,jsx}": [
      "standard --fix",
      "git add"
    ]
  },
  "repository": "hugojosefson/duplicati-generate-config",
  "keywords": [
    "duplicati",
    "config",
    "backup"
  ],
  "author": "Hugo Josefson <hugo@josefson.org> (https://www.hugojosefson.com/)",
  "license": "MIT",
  "engines": {
    "node": ">=12.0.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "coveralls": "^3.0.4",
    "documentation": "^11.0.1",
    "husky": "^3.0.0",
    "lint-staged": "^9.1.0",
    "mjs-mocha": "^3.0.0",
    "mocha": "^6.1.4",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "standard": "^12.0.1"
  },
  "dependencies": {
    "ramda": "^0.26.1",
    "term-size": "^2.1.0",
    "yargs": "^13.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
