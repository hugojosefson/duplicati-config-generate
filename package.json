{
  "name": "@hugojosefson/duplicati-generate-config",
  "version": "1.0.0",
  "description": "Generate duplicati backup configs from a flat file",
  "main": "src/api-commonjs.js",
  "module": "src/api.js",
  "files": [
    "bin",
    "src"
  ],
  "bin": {
    "duplicati-generate-config": "bin/duplicati-generate-config.js"
  },
  "scripts": {
    "start": "bin/duplicati-generate-config.js",
    "test": "run-s lint mocha",
    "mocha": "nyc mocha",
    "lint": "standard",
    "lint-fix": "standard --fix",
    "prepare": "run-s documentation",
    "documentation": "documentation readme --section=API --shallow --format=md src/api.js",
    "npm-audit": "npm install --package-lock-only && npm audit; rm package-lock.json",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "cache": true,
    "all": true
  },
  "lint-staged": {
    "*.{mjs,js,jsx}": [
      "standard --fix",
      "git add"
    ]
  },
  "keywords": [
    "duplicati",
    "config",
    "backup"
  ],
  "author": "Hugo Josefson <hugo@josefson.org> (https://www.hugojosefson.com/)",
  "license": "ISC",
  "engines": {
    "node": ">=8.3.0"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": [
      [
        "transform-object-rest-spread"
      ]
    ]
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "coveralls": "^3.0.2",
    "documentation": "^9.1.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.1.0",
    "ramda": "^0.26.1",
    "standard": "^12.0.1"
  },
  "dependencies": {
    "babel-core": "^6.26.3",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "engine-check": "^1.0.1",
    "term-size": "^1.2.0",
    "yargs": "^12.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
